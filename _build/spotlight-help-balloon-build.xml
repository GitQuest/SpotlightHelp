<?xml version="1.0"?>
<project name="spotlight-help-balloon-build" default="deploy" basedir=".">
  <property name="project.root" location=".." />


  <target name="build" description="Build help web site">
  	<echo message="Building Spotlight Help web app" />
    <exec executable="ruby" dir="${project.root}" failonerror="true">
        <arg value="--version" />
    </exec>
    <exec executable="gem" dir="${project.root}" failonerror="true">
        <arg value="install" />
        <arg value="bundler" />
    </exec>
      <!-- Getting bundle packages-->
  	<echo message="Installing packajes START" />
    <exec executable="bundle" dir="${project.root}" failonerror="true">
        <arg value="install" />
    </exec>
    <echo message="Installing packajes DONE" />
    <echo message="updating packajes START" />
    <exec executable="bundle" dir="${project.root}" failonerror="true">
        <arg value="update" />
    </exec>
    <echo message="update packajes DONE" />
  	<!-- Compile jekyll project-->
  	<echo message="Compile jekyll" />
    <exec executable="bundle exec jekyll build" dir="${project.root}" failonerror="true">
      <arg value="exec" />
      <arg value="jekyll" />
      <arg value="build" />
      <arg value="--config" />
      <arg value="_configBalloonHelpOffline.yml" />
    </exec>
    <echo message="build jekyll Done" />
  </target>
  <target name="deploy" description="deploy to blob" depends="build">
    <exec executable="powershell.exe" failonerror="true">
      <arg line="&amp;scripts\spotlight-help-deploy-to-balloon-ftp.ps1" />
      <arg line="-project_root ${project.root}" />
      <arg line="-FTPHost ${FTPHost}" />
      <arg line="-FTPUser ${ENV:ftpUser}" />
      <arg line="-FTPPass ${ENV:ftpPass}" />
    </exec>
  </target>
</project>
